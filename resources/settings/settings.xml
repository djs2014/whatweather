<settings>
	<setting propertyKey="@Properties.showCurrentForecast" title="@Strings.ShowCurrentForecast">
		<settingConfig type="boolean" />
	</setting>
	<setting propertyKey="@Properties.maxHoursForecast" title="@Strings.MaxHoursForecast">
		<settingConfig type="numeric" min="0" max="12" />
	</setting>	
	<setting propertyKey="@Properties.showWind" title="@Strings.ShowWind" prompt="@Strings.ShowWindPrompt">
		 <settingConfig type="list">
            <listEntry value="0">@Strings.ShowWindNothing</listEntry>
            <listEntry value="1">@Strings.ShowWindMeters</listEntry>            
			<listEntry value="2">@Strings.ShowWindKilometers</listEntry>            
            <listEntry value="3">@Strings.ShowWindBeaufort</listEntry>            
        </settingConfig>
	</setting>
	<setting propertyKey="@Properties.showTemperature" title="@Strings.ShowTemperature">
		<settingConfig type="boolean" />
	</setting>
	<setting propertyKey="@Properties.showRelativeHumidity" title="@Strings.ShowRelativeHumidity">
		<settingConfig type="boolean" />
	</setting>
	<setting propertyKey="@Properties.showComfort" title="@Strings.ShowComfort">
		<settingConfig type="boolean" />
	</setting>
    <setting propertyKey="@Properties.showInfo" title="@Strings.ShowInfo" prompt="@Strings.ShowInfoPrompt">
        <settingConfig type="list">
            <listEntry value="0">@Strings.ShowInfoNothing</listEntry>
            <listEntry value="1">@Strings.ShowInfoTimeOfDay</listEntry>            
            <listEntry value="2">@Strings.ShowInfoAltitude</listEntry>
            <listEntry value="3">@Strings.ShowInfoHeading</listEntry>
            <listEntry value="4">@Strings.ShowInfoTemperature</listEntry>
			<listEntry value="5">@Strings.ShowInfoHeartrate</listEntry>
			<listEntry value="6">@Strings.ShowInfoAmbientPressure</listEntry>
			<listEntry value="7">@Strings.ShowInfoDistance</listEntry>
        </settingConfig>
    </setting>      
	<setting propertyKey="@Properties.alertLevelPrecipitationChance" title="@Strings.AlertLevelprecipitationChance">
		<settingConfig type="numeric" min="0" max="100" />
	</setting>	
	<setting propertyKey="@Properties.alertLevelWindSpeed" title="@Strings.AlertLevelWindSpeed">
		<settingConfig type="numeric" min="0" />
	</setting>	
	<setting propertyKey="@Properties.showAlertLevel" title="@Strings.ShowAlertLevel">
		<settingConfig type="boolean" />
	</setting>
	<setting propertyKey="@Properties.showMaxPrecipitationChance" title="@Strings.ShowMaxPrecipitationChance">
		<settingConfig type="boolean" />
	</setting>	
	<setting propertyKey="@Properties.showPrecipitationChanceAxis" title="@Strings.ShowPrecipitationChanceAxis">
		<settingConfig type="boolean" />
	</setting>		
	<setting propertyKey="@Properties.showObservationTime" title="@Strings.ShowObservationTime">
		<settingConfig type="boolean" />
	</setting>
	<setting propertyKey="@Properties.observationTimeDelayedMinutesThreshold" title="@Strings.ObservationTimeDelayedMinutesThreshold">
		<settingConfig type="numeric" min="0" max="60" />
	</setting>	
	<setting propertyKey="@Properties.showObservationLocationName" title="@Strings.ShowObservationLocationName">
		<settingConfig type="boolean" />
	</setting>
	<setting propertyKey="@Properties.dashesUnderColumnHeight" title="@Strings.DashesUnderColumnHeight">
		<settingConfig type="numeric" min="0" max="4" />
	</setting>	
    <setting propertyKey="@Properties.showColumnBorder" title="@Strings.ShowColumnBorder">
		<settingConfig type="boolean" />
	</setting>		
</settings>
